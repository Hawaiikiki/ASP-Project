@model ApplicationCore.Models.CastDetailsModel

@{
	ViewData["Title"] = Model.Name;
}

<div class="container-fluid">
	<div class="row align-content-center justify-content-center">
		<div class="col" style="text-align: center;">
			<img style="height:7em;" src="@Model.ProfilePath" alt="@Model.Name">
		</div>
		<div class="col">
			<div class="row"><h4>Name: @Model.Name</h4></div>
			<div class="row">
				@if (@Model.Gender == "2")
				{
					<h4>Gender: Male</h4>
				}
				else
				{
					<h4>Gender: Female</h4>
				}
			</div>
			<div class="row"><h4>Tmdb:<a href="@Model.TmdbUrl">@Model.Name</a></h4></div>
		</div>
	</div>
	<hr />
	<div class="row">
		<div class="row">
			<ul class="list-group list-group-flush">
				@foreach (var movie in @Model.Movies)
				{
					<li class="list-group-item">
						<a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">
							<img src="@movie.PosterUrl" alt="@movie.Title" style="height:5em;">
						</a>
						&nbsp;
						@movie.Title
					</li>
				}
			</ul>

		</div>
	</div>
</div>
