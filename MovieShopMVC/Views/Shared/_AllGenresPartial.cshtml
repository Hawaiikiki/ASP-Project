@inject ApplicationCore.ServiceContracts.IGenreService genreService

<li class="nav-item dropdown">
	<a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
		Genres
	</a>
	<div class="dropdown-menu">
		<a class="dropdown-item" href="#">action</a>
		@foreach (var genre in await genreService.GetAllGenres())
		{
			<a class="dropdown-item" asp-controller="Movies" asp-action="GenreMovies"
		   asp-route-id="@genre.Id" asp-route-name="@genre.Name" asp-route-page="1">@genre.Name</a>
		}
	</div>
</li>
